@model Lista10.Models.Article

@{
    ViewData["Title"] = "Edit";
}





<div class="row justify-content-between">
    <div class="w-auto">
        <h1>Edit article</h1>
    </div>
    <div class="w-auto">
        <div class="form-group">
            <input type="submit" form="editform" value="Save" class="btn btn-primary" />
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <form id="editform" class="row justify-content-between" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <input type="hidden" asp-for="ArticleId" />
                <div class="form-group">
                    <label asp-for="ArticleName" class="control-label"></label>
                    <input asp-for="ArticleName" class="form-control" />
                    <span asp-validation-for="ArticleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    </select>
                </div>
                
            </div>
            <br />
        </form>
        
    </div>
    <div class="col-md-4">

    </div>
</div>
<div>
    <p>Image</p>
    <img src="@(Model.Image != null ? "/" + Model.Image : "/image/noimage.jpg")" class="mw-100 h-auto" alt="">
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
